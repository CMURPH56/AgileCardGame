<project>
	<modelVersion>4.0.0</modelVersion>
	<groupId>edu.depaul.cdm.se459</groupId>
	<artifactId>agile-cardgame</artifactId>
	<version>1.0-SNAPSHOT</version>
	<!--<packaging>jar</packaging>-->
	<name>Agile Card Game</name>

	<properties>
		<maven.compiler.source>1.8</maven.compiler.source>
		<maven.compiler.target>1.8</maven.compiler.target>
  </properties>
  
	<build>
	<plugins>
		<plugin>
		  <groupId>org.apache.maven.plugins</groupId>
		  <artifactId>maven-assembly-plugin</artifactId>
		  <executions>
			<execution>
			  <phase>package</phase>
			  <goals>
				<goal>single</goal>
			  </goals>
			  <configuration>
				<archive>
				  <manifest>
					<mainClass>main.java.cardgame.GameDriver</mainClass>
				  </manifest>
				</archive>
				<descriptorRefs>
				  <descriptorRef>jar-with-dependencies</descriptorRef>
				</descriptorRefs>
			  </configuration>
			</execution>
		  </executions>
		</plugin>
	  </plugins>
	</build>
</project>